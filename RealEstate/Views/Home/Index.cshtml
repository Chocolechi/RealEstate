@using RealEstate.Core.Application.ViewModels.Property
@model List<PropertyViewModel>


<div class="row mx-5">

    <div class="col-sm-3 w-100 d-flex align-items-center gap-4 mb-3">
        <form asp-action="Index" class="d-flex align-items-center gap-2 w-100">
            <select class="form-select w-100" name="">
                <option disabled selected>Seleccionar propiedad...</option>
                <option value="null">Todas</option>
                @*foreach (var item in ViewBag.Properties){}*@
                    <option value="">Casa</option>
            </select>
            <select class="form-select w-100" name="">
                <option disabled selected>Filtrar por precio...</option>
                <option value="null">Todas</option>
                    <option value="1">Precio mínimo</option>
                    <option value="2">Precio máximo</option>
            </select>
            <div class="form-group w-100">
                <input class="form-control" placeholder="Cantidad de habitaciones">
            </div>
            <div class="form-group w-100">
                <input class="form-control" placeholder="Cantidad de baños">
            </div>
            <button class="btn btn-success" type="submit">Filtrar</button>
        </form>
        <form asp-action="Index" class="d-flex align-items-center gap-2 w-25"> 
            <input class="form-control w-100" type="text" name="" placeholder="Buscar por código">
            <button class="btn btn-success" type="submit">Buscar</button>
        </form>
    </div>
   
    @if (Model.Count == 0 || Model == null)
    {
        <section class="col-6 bg-danger rounded-3 text-white text-center mx-auto p-4 mt-5">
	        <h3 class="display-8 fw-normal text-uppercase fw-bolder m-0"> No hay propiedades en el sistema </h3>
        </section>
    }
    @foreach (PropertyViewModel item in Model)
    {
        <section class="col-3 my-4 mx-auto slide-up">
            <a asp-controller="Home" asp-action="Details" class="card bg-light border-0 shadow" asp-route-id="">
                <section class="card-body">
                    <img src="@item.PropertyImgUrl1" class="card-img-top img-fluid img-cover" alt="pokemon">
                    <div class="d-flex flex-column gap-2 mt-3">
                        <div class="d-flex flex-column">
                            <h6 class="fw-bold">
                                @item.PropertyType
                            </h6>
                            <h6 class="">
                                San Juan, Puerto Rico
                            </h6>
                        </div>
                        <div class="d-flex flex-column">
                            <h6 class="">
                                Código
                            </h6>
                            <h6 class="fw-bold">
                                @item.Code
                            </h6>
                        </div>
                        <div class="d-flex flex-column">
                            <h6 class="">
                                @item.SaleType
                            </h6>
                            <h6 class="text-danger fw-bold">
                                @item.Price 
                            </h6>
                        </div>
                    </div>
                </section>
                    <section class="card-footer">
                        <div class="d-flex justify-content-between align-items-center gap-5">
                            <section class="d-flex justify-content-center align-items-center gap-2">
                                <img src="~/images/bed.png" />
                                <h6 class="fw-bold m-0"> @item.RoomQty </h6>
                            </section>
                        <section class="d-flex justify-content-center align-items-center gap-2">
                                <img src="~/images/bathtub.png"/>
                                <h6 class="fw-bold m-0"> @item.RestRoomQty </h6>
                            </section>
                        <section class="d-flex justify-content-center align-items-center gap-2">
                                <img src="~/images/tape-measure.png" />
                                <h6 class="fw-bold m-0"> @item.ParcelSize mts </h6>
                            </section>
                        </div>
                    </section>
            </a>
        </section>
    }

</div>