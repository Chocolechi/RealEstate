@using RealEstate.Core.Application.ViewModels.User
@model List<UserViewModel>

@{
    //var propQty = ViewBag.PropertyQty;
}


<div class="row">
    <div class="col-8 mx-auto">
        <section class="w-100 mx-auto bg-light rounded-3 text-center p-3 mb-5">
            <h3 class="display-8 fw-normal text-uppercase fw-bolder m-0">
                Agentes registrados
            </h3>
        </section>

        @if (Model == null || Model.Count == 0)
        {
            <h2>No existen agentes</h2>
        }
        else
        {
            <table class="table table-hover mt-5">
                <thead>
                    <tr class="table-light">
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Cantidad de propiedades</th>
                        <th class="text-center" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (UserViewModel item in Model)
                    {
                        <tr class="table-light">
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.PropQty</td>
                            <td>
                                <div class="d-flex gap-2 justify-content-start w-100">
                                    @if (item.IsVerified)
                                    {
                                        <a asp-controller="Agent" asp-action="ActiveUser" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger w-100">Desactivar</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Agent" asp-action="ActiveUser" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success w-100">Activar</a>
                                    }
                                    <a 
                                        asp-controller="Agent" 
                                        asp-action="Delete" 
                                        asp-route-id="@item.Id" 
                                        class="btn btn-sm btn-danger me-2 w-100"
                                    >
                                        Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

</div>