@using RealEstate.Core.Application.ViewModels.Improvement
@model List<ImprovementViewModel>


<div class="row">

    <div class="row bg-light rounded p-3 mb-5">
        <section class="w-100 d-flex justify-content-between gap-3 align-items-center px-5">
            <a asp-controller="Improvement" asp-action="Add" class="btn btn-outline-dark">
                Agregar Mejoras
            </a>
        </section>
    </div>

    <div class="col-8 mx-auto">

        @if (Model == null || Model.Count == 0)
        {
            <h2>No existen tipos de mejoras</h2>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripción</th>
                        <th class="text-center" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ImprovementViewModel item in Model)
                    {
                        <tr class="table-light">
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>
                                <div class="d-flex justify-content-start w-100">
                                     <a 
                                        asp-controller="Improvement" 
                                        asp-action="Update" 
                                        asp-route-id="@item.Id" 
                                        class="btn btn-sm btn-info me-2 w-100"
                                    >
                                        Editar
                                    </a>
                                    <a 
                                        asp-controller="Improvement" 
                                        asp-action="Delete" 
                                        asp-route-id="@item.Id" 
                                        class="btn btn-sm btn-danger me-2 w-100"
                                    >
                                        Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

</div>