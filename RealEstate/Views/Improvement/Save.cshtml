@using RealEstate.Core.Application.ViewModels.Improvement
@model ImprovementSaveViewModel

@{
	bool editMode = Model.Id == 0 ? false : true;
}

<div class="row">
    <div class="col-5 mx-auto">
        <div class="card shadow bg-light">
            <div class="card-body">
                <form asp-controller="Improvement" asp-action=@(editMode ? "Update" : "Add") method="post" class="row gap-3 my-3" enctype="multipart/form-data">
                    <div class="text-center my-2">
                        <h3 class="text-muted w-100">
                            @(editMode ? $"Editar mejora" : "Crear nueva mejora")
                        </h3>
                    </div>
                    <section class="col-8 mx-auto mt-2">

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Nombre" />
                            <label asp-for="Name"> Nombre</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" class="form-control" placeholder="Descripción"></textarea> 
                            <label asp-for="Description" class="form-label">Descripción</label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </section>

                    <input type="hidden" asp-for="Id" name="Id" value="@Model.Id" />

                    <div class="col-8 mx-auto">
                        <button type="submit" class="btn btn-primary btn-lg w-100 mt-2">Guardar</button>
                        <a asp-controller="Improvement" asp-action="Index" class="btn btn-secondary w-100 mt-2">Volver atrás</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>