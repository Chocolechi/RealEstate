@using RealEstate.Core.Application.ViewModels.SaleType
@model List<SaleTypeViewModel>


<div class="row">

    <div class="col-8 mx-auto">
        <section class="w-100 d-flex mx-auto justify-content-between gap-3 align-items-center pb-5">
            <a asp-controller="SaleType" asp-action="Add" class="btn btn-outline-success text-uppercase w-100 py-3">
                Agregar Tipo de Venta
            </a>
        </section>

        @if (Model == null || Model.Count == 0)
        {
            <section class="col-6 bg-danger rounded-3 text-white text-center mx-auto p-4 mt-5">
	            <h3 class="display-8 fw-normal text-uppercase fw-bolder m-0"> No hay tipos de ventas </h3>
            </section>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr class="table-light">
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Cantidad de propiedades pertenecientes</th>
                        <th class="text-center" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (SaleTypeViewModel item in Model)
                    {
                        <tr class="table-light">
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.PropertiesQty</td>
                            <td>
                                <div class="d-flex justify-content-start w-100">
                                     <a 
                                        asp-controller="SaleType" 
                                        asp-action="Update" 
                                        asp-route-id="@item.Id" 
                                        class="btn btn-sm btn-info me-2 w-100"
                                    >
                                        Editar
                                    </a>
                                    <a 
                                        asp-controller="SaleType" 
                                        asp-action="Delete" 
                                        asp-route-id="@item.Id" 
                                        class="btn btn-sm btn-danger me-2 w-100"
                                    >
                                        Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

</div>